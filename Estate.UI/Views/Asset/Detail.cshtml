<script>
    var map;

    function Olustur(latr,lngr) {
       
       
        map = new google.maps.Map(document.getElementById('property-detail-map'), {
            center: { lat: latr != null ? latr : 38.734802, lng: lngr != null ? lngr : 35.467987 },
            zoom: 17
        });



    }


    $(document).ready(function () {
        $.ajax({
            url: '/Location/GetMapLocationById',
            type: "GET",
            data: { id: $('#Id').val() },
            dataType: 'json',
            success: function (response) {
                //console.log(response);
                var lat = response.Lat;
                var lng = response.Long;



                var iconName = response.catid == 1 ? "/Content/assets/img/icons/villa.png" : response.catid == 2 ? "/Content/assets/img/icons/land.png" : response.catid == 3 ? "/Content/assets/img/icons/apartment.png" : response.catid == 4 ? "/Content/asset/img/icons/house.png" : "/Content/assets/img/icons/shop.png";
                
                Olustur(lat, lng);
                
                var marker = new google.maps.Marker({
                    position: { lat: response.Lat, lng: response.Long },
                    map: map,
                    icon: iconName
                });

                var contentString = '<div  class="property" id="prop">' +
                          '<a href="/Asset/Detail/' + response.Id + '">' +
                             ' <div class="property-image" >' +
                              '<img  alt="" src="/Gallery/' + response.Id + '/' + response.ImageUrl + '"> ' +
                             ' </div>' +
                              '<div class="overlay">' +
                                 ' <div class="info">' +
                                    '  <div class="tag price">₺' + response.Price + '</div>' +
                                      '<figure>+' + response.Address + '</figure>' +
                                  '</div>' +
                             '</div>' +
                          '</a>' +
                     ' </div>';
                var i = 0;

                var infowindow = new google.maps.InfoWindow({
                    content: contentString,
                    maxWidth: 300,
                });
                google.maps.event.addListener(marker, 'mouseover', (function (marker, i) {
                    return function () {
                        infowindow.open(map, marker);
                    }
                })(marker, i));
             
            }
        })
    });


 

   
</script>

   
