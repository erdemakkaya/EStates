@using Estate.UI.Models.ViewModel
@{
    ViewBag.Title = "Edit";
}


@model AssetViewModel
<div id="page-content">
    <!-- Breadcrumb -->
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">İlan Ekle</li>
        </ol>
    </div>
    <!-- end Breadcrumb -->

    <div class="container">
        <header><h1>İlan Düzenle </h1></header>
        <div class="row">
            <!-- Submit-->
            <div class="col-md-9 col-sm-9">
                <section id="submit" class="submit">
                    <section id="select-package">
                        <div class="table-responsive submit-pricing">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Paketiniz:</th>
                                        <th class="title">Ücretsiz</th>
                                        <th class="title">Gümüş</th>
                                        <th class="title">Altın</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="prices">
                                        <td></td>
                                        <td>₺0</td>
                                        <td>₺80</td>
                                        <td>₺250</td>
                                    </tr>
                                    <tr>
                                        <td>İlan Ekeleme Sınırı</td>
                                        <td>1</td>
                                        <td>20</td>
                                        <td>Unlimited</td>
                                    </tr>
                                    <tr>
                                        <td>Agent Profiles</td>
                                        <td>1</td>
                                        <td>10</td>
                                        <td>Unlimited</td>
                                    </tr>
                                    <tr>
                                        <td>Agency Profiles</td>
                                        <td class="not-available"><i class="fa fa-times"></i></td>
                                        <td>5</td>
                                        <td>Unlimited</td>
                                    </tr>
                                    <tr>
                                        <td>Featured Properties</td>
                                        <td class="not-available"><i class="fa fa-times"></i></td>
                                        <td class="available"><i class="fa fa-check"></i></td>
                                        <td class="available"><i class="fa fa-check"></i></td>
                                    </tr>
                                    <tr class="buttons">
                                        <td></td>
                                        <td class="package-selected" data-package="free"><button type="button" class="btn btn-default small">Select</button></td>
                                        <td data-package="silver"><button type="button" class="btn btn-default small">Select</button></td>
                                        <td data-package="gold"><button type="button" class="btn btn-default small">Select</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div><!-- /.submit-pricing -->
                    </section><!-- /#select-package -->
                </section><!-- /#submit -->
            </div><!-- /.col-md-9 -->
            <aside class="col-md-3 col-sm-3">
                <div class="submit-step">
                    <figure class="step-number">1</figure>
                    <div class="description">
                        <h4>Ödeme Paketinizi Seçin</h4>
                        <p>
                            İhtiyacınıza uygun fiyat paketleri arasından seçim yapın.
                        </p>
                    </div>
                </div><!-- /.submit-step -->
            </aside><!-- /.col-md-3 -->
        </div><!-- /.row -->
        @using (@Html.BeginForm("Edit", "Asset", FormMethod.Post, new { @class = "form-submit", enctype = "multipart/form-data" }))
            {
            @Html.HiddenFor(x => x.property.Id)

            <div class="row">
                <div class="block">
                    <div class="col-md-9 col-sm-9">
                        <section id="submit-form">
                            <section id="basic-information">
                                <header><h2>İlan-Mülk Bilgisi</h2></header>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="submit-title">Başlık</label>
                                            @Html.TextBoxFor(x => Model.property.Title, "", new { @id = "submit-title", @class = "form-control" })


                                        </div><!-- /.form-group -->
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="submit-price">Tutar</label>
                                            <div class="input-group">
                                                <span class="input-group-addon">$</span>
                                                @Html.TextBoxFor(x => Model.property.Price, "", new { @id = "submit-price", @class = "form-control", })


                                            </div>
                                        </div><!-- /.form-group -->
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="submit-description">Özellikler</label>
                                    @Html.TextAreaFor(x => Model.property.ShortDescription, new { @id = "submit-description", @rows = "8", @class = "form-control" })




                                </div><!-- /.form-group -->
                                <div class="form-group">
                                    <label for="submit-description">  Özellikler</label>

                                    @Html.TextAreaFor(x => Model.property.Description, new { @id = "editor1", @rows = "8", @class = "form-control" })
                                    <script src="~/Content/assets/js/ckeditor/ckeditor.js"></script>
                                    <script type="text/javascript">

                                        CKEDITOR.replace("editor1");
                                    </script>




                                </div><!-- /.form-group -->
                            </section><!-- /#basic-information -->

                            <section>
                                <div class="row">
                                    <div class="block clearfix">
                                        <div class="col-md-6 col-sm-6">
                                            <section id="summary">
                                                <header><h2>Summary</h2></header>
                                                <div class="form-group">
                                                    <label for="submit-location">Şehir</label>
                                                    @Html.TextBoxFor(x => Model.property.City, "", new { @id = "submit-Beds", @class = "form-control" })




                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label for="submit-property-type">Mülk Tipi</label>
                                                            @Html.DropDownListFor(x => Model.property.Category.Id, new SelectList(Model.CategoryList, "Id", "CategoryName"), ("Seçiniz"), new { @id = "submit-property-type" })



                                                        </div><!-- /.form-group -->
                                                    </div><!-- /.col-md-6 -->
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label for="submit-status">Durumu</label>
                                                            <select name="property.Status" id="submit-status">
                                                                <option value="1">Sale</option>
                                                                <option value="2">Rent</option>
                                                            </select>
                                                        </div><!-- /.form-group -->
                                                    </div><!-- /.col-md-6 -->
                                                </div><!-- /.row -->
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label for="submit-Beds"> İlan/Talep </label>
                                                            <select name="property.TypeOfProperty" id="submit-status">
                                                                <option value="false">İlan</option>
                                                                <option value="true">Talep</option>
                                                            </select>
                                                        </div><!-- /.form-group -->
                                                    </div><!-- /.col-md-6 -->
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label for="submit-Baths">Oda</label>
                                                            <input type="text" value="@Model.property.Room" class="form-control" id="submit-Baths" name="property.Room">
                                                        </div><!-- /.form-group -->
                                                    </div><!-- /.col-md-6 -->
                                                </div><!-- /.row -->
                                                <div class="row">
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label for="submit-area">Alan</label>
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" id="submit-area" value="@Model.property.Area" name="property.area">
                                                                <span class="input-group-addon">m<sup>2</sup></span>
                                                            </div>
                                                        </div><!-- /.form-group -->
                                                    </div><!-- /.col-md-6 -->
                                                    <div class="col-md-6 col-sm-6">
                                                        <div class="form-group">
                                                            <label for="submit-garages">Garaj</label>
                                                            <input type="text" class="form-control" id="submit-garages" name="garages">
                                                        </div><!-- /.form-group -->
                                                    </div><!-- /.col-md-6 -->
                                                </div><!-- /.row -->
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">Allow user rating <i class="fa fa-question-circle tool-tip" data-toggle="tooltip" data-placement="right" title="Users can give you a stars rating which is displayed in property detail"></i>
                                                    </label>
                                                </div>
                                            </section><!-- /#summary -->
                                        </div><!-- /.col-md-6 -->
                                        <div class="col-md-6 col-sm-6">
                                            <section id="place-on-map">
                                                <header class="section-title">
                                                    <h2>Place on Map</h2>
                                                    <span class="link-arrow geo-location">Konumunu Al</span>
                                                </header>
                                                <div class="form-group">
                                                    <label for="address-map">Adres</label>
                                                    @Html.TextBoxFor(x => Model.property.GeoLocation.Address, "", new { @id = "adress-map", @class = "form-control" })


                                                </div><!-- /.form-group -->
                                                <label for="address-map">işaretçiyi </label>
                                                <div id="submit-map"></div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(x => Model.property.GeoLocation.Lat, "", new { @id = "latitude", @class = "form-control" })
                                                        </div><!-- /.form-group -->

                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(x => Model.property.GeoLocation.Long, "", new { @id = "longitude", @class = "form-control" })


                                                        </div><!-- /.form-group -->
                                                    </div>
                                                </div>
                                            </section><!-- /#place-on-map -->
                                        </div><!-- /.col-md-6 -->
                                    </div><!-- /.block -->
                                </div><!-- /.row -->
                            </section>

                            <section class="block" id="gallery">
                                <header><h2>Gallery</h2></header>
                                <div class="center">
                                    <div class="form-group">
                                        <input id="file-upload" type="file" class="file" multiple="true" data-show-upload="false" data-show-caption="false" data-show-remove="false" accept="jpeg" name="Gallery" data-browse-class="btn btn-default" data-browse-label="Browse Images">
                                        <figure class="note"><strong>İpucu:</strong> Tüm resimleri tek seferde yükleyebilirsiniz...</figure>
                                    </div>
                                </div>
                            </section>

                            <section id="property-features" class="block">
                                @*<section>
                                            <header><h2>Property Features</h2></header>
                                            <ul class="submit-features">
                                                <li><div class="checkbox"><label><input type="checkbox">Air conditioning</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Bedding</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Heating</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Internet</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Microwave</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Smoking allowed</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Use of pool</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Toaster</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Coffee pot</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Cable TV</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Parquet</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Roof terrace</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Terrace</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Balcony</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Iron</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Hi-Fi</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Beach</label></div></li>
                                                <li><div class="checkbox"><label><input type="checkbox">Garage</label></div></li>
                                            </ul>
                                        </section>
                                    </section>*@
                                <hr>
                            </section>
                    </div><!-- /.col-md-9 -->
                    <div class="col-md-3 col-sm-3">
                        <aside class="submit-step">
                            <figure class="step-number">2</figure>
                            <div class="description">
                                <h4>Mülk Bilgilerini Gir</h4>
                                <p>
                                    Type information about your property. Be descriptive.
                                </p>
                            </div>
                        </aside><!-- /.submit-step -->
                    </div><!-- /.col-md-3 -->
                </div>
            </div><!-- /.row -->
            <div class="row">
                <div class="block">
                    <div class="col-md-9 col-sm-9">
                        <div class="center">
                            <div class="form-group">
                                <button type="submit" class="btn btn-default large">İlanı Yayınla</button>
                            </div><!-- /.form-group -->
                            @*<figure class="note block">By clicking the “Proceed to Payment” or “Submit” button you agree with our <a href="terms-conditions.html">Terms and conditions</a></figure>*@
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3">
                        <aside class="submit-step">
                            <figure class="step-number">3</figure>
                            <div class="description">
                                <h4>Review Information and Proceed to Payment</h4>
                                <p>
                                    Carefully check entered information and than click button to submit them.
                                </p>
                            </div>
                        </aside><!-- /.submit-step -->
                    </div><!-- /.col-md-3 -->
                </div>
            </div>
        }
        <!-- /#form-submit -->
    </div><!-- /.container -->
</div>